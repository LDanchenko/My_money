<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_account"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"

        android:text="Введите название счета"
        />


    <EditText
        android:layout_width="200dp"
    android:layout_height="wrap_content"

    android:layout_marginTop="19dp"
        android:textColor="@color/colorPrimaryDark"
    android:id="@+id/edittext"
        android:layout_below="@+id/title_account"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_count"
        android:layout_below="@+id/edittext"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"

        android:text="Введите начальный баланс"
        />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="14dp"
        android:id="@+id/editcount"
        android:inputType="numberDecimal"
        android:layout_below="@+id/title_count"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title_cyrrency"
        android:layout_below="@+id/editcount"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:text="Выберите валюту"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_currency"
        android:layout_below="@+id/title_cyrrency"
        android:layout_centerHorizontal="true"
        android:background="@color/colorWhite"
        android:textColor="@color/colorPrimaryDark"
        android:popupBackground="#f7f3f3"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_currency"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/okButton"
            android:layout_weight="1"
            android:text="@string/ok"
            android:layout_margin="20dp"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelButton"
            android:layout_weight="1"
            android:text="@string/cancel"
            android:layout_margin="20dp"
            />

    </LinearLayout>

</RelativeLayout>