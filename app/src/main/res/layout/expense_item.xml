<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/expense_card_root"
    app:cardCornerRadius="2dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/expense_item_inner_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expense_item_expense_name"
            android:theme="@style/CardTextTheme"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/expense_item_expense_name"
            android:layout_alignParentEnd="true"
            android:id="@+id/expense_item_expense_price"
            android:gravity="right"
            android:theme="@style/CardTextTheme"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expense_item_date"
            android:layout_below="@+id/expense_item_expense_name"
            android:theme="@style/CardTextTheme"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/expense_item_category"
            android:gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/expense_item_expense_price"
            android:layout_toEndOf="@id/expense_item_category"
            android:theme="@style/CardTextTheme"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/expense_item_account"
            android:gravity="right"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/expense_item_category"
            android:theme="@style/CardTextTheme"
            android:layout_alignParentStart="true"
            android:text="blablabla"/>
    </RelativeLayout>
    <View
        android:id="@+id/selected_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/selected_color"
        android:visibility="invisible"/>

</android.support.v7.widget.CardView>